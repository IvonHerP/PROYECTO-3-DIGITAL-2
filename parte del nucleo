/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */
typedef enum {
    SYS_IDLE = 0,
    SYS_MEASURING,
    SYS_TRANSMITTING,
    SYS_SAVING,
    SYS_ERROR
} SystemState;
/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
#define DATA_BUFFER_SIZE 150
#define DEBOUNCE_DELAY 300 // ms
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c1;

SPI_HandleTypeDef hspi1;

UART_HandleTypeDef huart1;
UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
FATFS fs;                   // Sistema de archivos (montaje SD)
FIL fil;                    // Archivo
FRESULT fres;               // Resultado de funciones FatFs
char buffer[DATA_BUFFER_SIZE]; // Buffer general para mensajes
char rx_buffer[DATA_BUFFER_SIZE]; // Buffer para recibir del ESP32

// Variables de estado y datos del sensor
float last_temp = 0;
float last_hum = 0;
float last_pressure = 0;
bool dataReady = false;
uint8_t measurements_count = 0;

// Variables para debounce de botones
uint32_t last_btn1_time = 0;
uint32_t last_btn2_time = 0;

SystemState currentSystemState = SYS_IDLE;
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART2_UART_Init(void);
static void MX_I2C1_Init(void);
static void MX_USART1_UART_Init(void);
static void MX_SPI1_Init(void);
/* USER CODE BEGIN PFP */
void transmit_uart_pc(const char *string);
void transmit_esp(const char *string);
// Función de debounce: se revisa si el botón está presionado y si pasó el tiempo de retardo.

uint8_t IsButtonPressed(GPIO_TypeDef* GPIOx, uint16_t GPIO_Pin, uint32_t* last_press_time);
void UpdateSystemState(SystemState newState);
void SaveDataToSD(void);
void ReadSensorData(void);

// Implementación de funciones de bajo nivel
void transmit_esp(const char *string) {
    // Envía solo un carácter ('R') al ESP32 por UART2
    HAL_UART_Transmit(&huart2, (uint8_t*)string, 1, HAL_MAX_DELAY);
}

void transmit_uart_pc(const char *string) {
    uint8_t len = strlen(string);
    // Envía el log a la PC por UART1
    HAL_UART_Transmit(&huart1, (uint8_t*) string, len, 200);
}

// Función de debounce (Mantenemos la lógica de PULL-UP: activo en LOW/RESET)
uint8_t IsButtonPressed(GPIO_TypeDef* GPIOx, uint16_t GPIO_Pin, uint32_t* last_press_time) {
    uint32_t current_time = HAL_GetTick();
    if (HAL_GPIO_ReadPin(GPIOx, GPIO_Pin) == GPIO_PIN_RESET) {
        if ((current_time - *last_press_time) > DEBOUNCE_DELAY) {
            HAL_Delay(20); // Pequeño retardo para confirmar
            if (HAL_GPIO_ReadPin(GPIOx, GPIO_Pin) == GPIO_PIN_RESET) {
                *last_press_time = current_time;
                return 1;
            }
        }
    }
    return 0;
}

void UpdateSystemState(SystemState newState) {
    currentSystemState = newState;
    switch(newState) {
        case SYS_IDLE: transmit_uart_pc("[SISTEMA] Estado: IDLE\r\n"); break;
        case SYS_MEASURING: transmit_uart_pc("[SISTEMA] Estado: MIDIENDO\r\n"); break;
        case SYS_TRANSMITTING: transmit_uart_pc("[SISTEMA] Estado: TRANSMITIENDO\r\n"); break;
        case SYS_SAVING: transmit_uart_pc("[SISTEMA] Estado: GUARDANDO\r\n"); break;
        case SYS_ERROR: transmit_uart_pc("[SISTEMA] Estado: ERROR\r\n"); break;
    }
}

// Función central de lectura
void ReadSensorData(void) {
    transmit_uart_pc("\r\n--- INICIO DE MEDICION ---\r\n");
    transmit_uart_pc("[LOG] Solicitando datos al ESP32...\r\n");
    HAL_Delay(500);

    memset(rx_buffer, 0, sizeof(rx_buffer));
    transmit_esp("R"); // Envía el comando de lectura
    HAL_Delay(100);
    UpdateSystemState(SYS_TRANSMITTING);

    // espera 5s
    uint32_t startTime = HAL_GetTick();
    uint8_t idx = 0;
    bool responseReceived = false;

    transmit_uart_pc("[LOG] Esperando respuesta...\r\n");

    while ((HAL_GetTick() - startTime) < 5000) {
        if (HAL_UART_Receive(&huart2, (uint8_t*)&rx_buffer[idx], 1, 100) == HAL_OK) {
            if (rx_buffer[idx] == '\n' || rx_buffer[idx] == '\r') {
                rx_buffer[idx] = '\0';
                responseReceived = true;
                break;
            }
            idx++;
            if (idx >= sizeof(rx_buffer) - 1) break;
        }
    }

    if (responseReceived) {
        sprintf(buffer, "[DATOS] Raw: %s\r\n", rx_buffer);
        transmit_uart_pc(buffer);

        // Parsear respuesta (ej: "T:25.50;H:60.30;P:1012.50")
        if (sscanf(rx_buffer, "T:%f,H:%f", &last_temp, &last_hum) == 2) {
                    dataReady = true;
                    measurements_count++;

          sprintf(buffer, "[DATOS] ¡EXITO! Medicion #%d. T:%.2fC, H:%.2f%%\r\n",
                  measurements_count, last_temp, last_hum);
          transmit_uart_pc(buffer);

        } else {
                    dataReady = false;
                    transmit_uart_pc("[ERROR] Formato de datos incorrecto.\r\n");
                    UpdateSystemState(SYS_ERROR);
                }
    } else {
        dataReady = false;
        transmit_uart_pc("[ERROR] Timeout - Sin respuesta del ESP32.\r\n");
        UpdateSystemState(SYS_ERROR);
    }

    transmit_uart_pc("--- FIN DE MEDICION ---\r\n\r\n");
    UpdateSystemState(SYS_IDLE);
}

// Función de guardado de datos en SD
void SaveDataToSD(void) {
    if (!dataReady) {
        transmit_uart_pc("[SD] ERROR: No hay datos validos para guardar.\r\n");
        return;
    }

    char filename[30];
    sprintf(filename, "DATA%03d.TXT", measurements_count);

    transmit_uart_pc("[SD] Intentando guardar en SD...\r\n");
    UpdateSystemState(SYS_SAVING);

    // Abre el archivo: siempre crea uno nuevo, listo para escribir
    fres = f_open(&fil, filename, FA_CREATE_ALWAYS | FA_WRITE);
    if (fres != FR_OK) {
        sprintf(buffer, "[SD] ERROR: No se pudo abrir/crear el archivo (%d).\r\n", fres);
        transmit_uart_pc(buffer);
        UpdateSystemState(SYS_ERROR);
        return;
    }

    // Construye la cadena de texto completa para guardar (CORRECCIÓN APLICADA)
    char data_text[150];
        snprintf(data_text, sizeof(data_text),
                "=== Datos Sensor #%d ===\r\n"
                "Temperatura: %.2f C\r\n"
                "Humedad: %.2f %%\r\n"
                "====================\r\n",
                measurements_count, last_temp, last_hum);

    UINT bytesWritten;
    fres = f_write(&fil, data_text, strlen(data_text), &bytesWritten);

    if (fres == FR_OK) {
        sprintf(buffer, "[SD] Guardado exitoso: Archivo %s (%u bytes).\r\n", filename, bytesWritten);
        transmit_uart_pc(buffer);
    } else {
        sprintf(buffer, "[SD] ERROR: Fallo al escribir en el archivo (%d).\r\n", fres);
        transmit_uart_pc(buffer);
        UpdateSystemState(SYS_ERROR);
    }

    f_close(&fil);
    UpdateSystemState(SYS_IDLE);
}
